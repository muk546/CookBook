<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Enter Special Cookware (if needed)..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <Button
        android:text="ADD TO LIST"
        android:onClick="cook_too_list"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_step2_add"
        android:layout_alignBottom="@+id/txt_step2_input"
        android:layout_toEndOf="@+id/txt_step2_input" />

    <EditText
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_step2_input"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:hint="Type Here"
        android:textAlignment="center" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_step2_add"
        android:id="@+id/list_step2" />

</RelativeLayout>