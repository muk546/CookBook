<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="1000dp"
    android:minHeight="1000dp"
    android:layout_width="1000dp"
    android:layout_height="1000dp">


    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/np_mins"
        android:layout_alignBaseline="@+id/np_hours"
        android:layout_alignBottom="@+id/np_hours"
        android:layout_toEndOf="@+id/btn_done_main" />

    <TextView
        android:text="Hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/np_hours"
        android:layout_marginEnd="13dp" />

    <TextView
        android:text="Mins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/np_mins"
        android:layout_marginStart="16dp" />

    <TextView
        android:text="Cooking Time?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView3" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/np_hours"
        android:layout_alignBottom="@+id/btn_done_main"
        android:layout_toStartOf="@+id/np_mins"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="102dp" />

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="258dp"
        android:id="@+id/btn_done_main"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />
</RelativeLayout>