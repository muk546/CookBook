<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Enter Ingredients..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_enter"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_step1_input"
        android:id="@+id/list_step1" />

    <Button
        android:text="Add to List"
        android:onClick="add_too_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_step1_add"
        android:layout_alignBaseline="@+id/txt_step1_input"
        android:layout_alignBottom="@+id/txt_step1_input"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_step1_input"
        android:textAlignment="center"
        android:hint="Type Here"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/txt_enter"
        android:layout_alignParentStart="true" />

</RelativeLayout>