<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="How Many Servings?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_step3_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="show"
        android:text="Edit Cooking Time"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/tv_time_step3"
        android:layout_alignStart="@+id/tv_time_step3"
        android:visibility="gone" />

    <TextView
        android:text="Cooking time?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/tv_serve_step3"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_time_step3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:onClick="show"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:text="Tap Here!"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Tap Here!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_serve_step3"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:onClick="show2"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/tv_time_step3" />


</RelativeLayout>